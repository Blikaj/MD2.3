<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnbanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="142dp"
        android:onClick="magicBanana"
        android:text="Press for banana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnantibanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="142dp"
        android:onClick="unmagicBanana"
        android:text="Press for no banana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textbanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="16dp"
        android:text="Banana"
        android:textColor="#1C1C1C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnbanana"
        app:layout_constraintVertical_bias="0.797"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/imgbanana"
        android:layout_width="154dp"
        android:layout_height="147dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textbanana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnbanana"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/banana"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>